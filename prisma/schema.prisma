datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id          Int          @id @default(autoincrement())
  firstName   String
  lastName    String
  age         Int
  phoneNumber String
  email       String?
  wilaya      String
  ipAddress   String?
  createdAt   DateTime     @default(now())
  appointment Appointment?
}

model Admin {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  password      String
  name          String
  role          AdminRole @default(ADMIN)
  createdById   Int?
  createdBy     Admin?    @relation("AdminCreatedBy", fields: [createdById], references: [id])
  createdAdmins Admin[]   @relation("AdminCreatedBy")
  logs          Log[]
}

model Log {
  id        Int      @id @default(autoincrement())
  action    String
  ipAddress String
  timestamp DateTime @default(now())
  adminId   Int
  admin     Admin    @relation(fields: [adminId], references: [id])
}

model Appointment {
  id              Int          @id @default(autoincrement())
  clientId        Int          @unique
  client          Client       @relation(fields: [clientId], references: [id])
  payment         Payment?
  WorkingHoursId  Int          @unique
  dateReservation WorkingHours @relation(fields: [WorkingHoursId], references: [id])
  link            String       @unique @default(cuid())
}

model WorkingHours {
  id        Int             @id @default(autoincrement())
  date      DateTime        @db.Date
  startTime DateTime        @db.Time()
  type      AppointmentType

  duration Int

  appointments Appointment?
}

model Payment {
  id            Int           @id @default(autoincrement())
  amount        Float
  payed         Float
  recite        Bytes?        @db.Blob
  paymentMethod PaymentMethod
  appointmentId Int           @unique
  appointment   Appointment   @relation(fields: [appointmentId], references: [id])
}

enum AdminRole {
  OWNER
  ADMIN
}

enum AppointmentType {
  InPerson
  Online
}

enum PaymentMethod {
  CCPBaridiMob
  OnSite
}
